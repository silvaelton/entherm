= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin'}) do |f|
  %h2.form-signin-heading √Årea Restrita
  .login-wrap
    .user-login-info
      = f.input :email, as: :string, label: false, required: false, autofocus: true, placeholder: "Digite seu e-mail"
      = f.input :password, required: false, label: false, placeholder: "Digite sua senha"
    = f.button :submit, 'Realizar Acesso', class: 'btn btn-login btn-block btn-lg'

.row.title-row
  .col-md-12
    %h4.title 
      Listagem de usuários
      = link_to "novo usuário", new_user_path, class: 'btn btn-success btn-sm pull-right'
.row
  .col-md-12
    %table.datatable.table-bordered.table-condensed
      %thead
        %tr
          %th Nome
          %th E-mail
          %th Status
          %th Privilégio
          %th Data de criação
          %th Último acesso
          %th Ações
      %tbody
        - @users.each do |user|
          %tr
            %td= user.name
            %td= user.email
            %td= user.status ? 'ativo' : 'inativo'
            %td= user.user_type
            %td= user.created_at.strftime("%d/%m/%Y às %H:%M")
            %td= user.last_sign_in_at.strftime("%d/%m/%Y") if user.last_sign_in_at.present?
            %td.col-md-2
              = link_to "editar", edit_user_path(user), class: 'btn btn-primary btn-xs'
              = link_to "remover", user_path(user), method: :delete, data: { confirm: t(:confirm_destroy)}, class: 'btn btn-danger btn-xs'
       
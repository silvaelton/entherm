.row
  .col-sm-12
    %section.panel
      %header.panel-heading
        .title 
          Cargos
          = link_to "Novo Cargo", new_job_path, class: 'pull-right'
        %hr/
      .panel-body
        .row
          .col-md-12
            %table.table.table-condensed.table-hover.table-bordered.table-striped.datatable
              %thead
                %tr
                  %th Nome
                  %th Status
                  %th Ações
              %tbody
                - @jobs.each do |job|
                  %tr 
                    %td.col-md-8= job.title
                    %td.col-md-2= job.status ? 'ativo' : 'inativo'
                    %td.col-md-2
                      = link_to "", edit_job_path(job), class: 'btn btn-success btn-sm s7-edit'
                      = link_to "", job_path(job), method: :delete, data: { confirm: t(:confirm_destroy)}, class: 'btn btn-danger btn-sm s7-trash', title: "Remover"

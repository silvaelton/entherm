.row.title-row
  .col-md-12
    %h4  Detalhe de Pedido - #{@order.contract.title.humanize} - #{@order.id}/#{@order.created_at.strftime('%Y')}
    = link_to "Voltar para pedidos", orders_path

.row
  .col-md-8
    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th Descrição
      %tbody
        %tr
          %td.col-md-3= @order.description
    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th Contrato
          %th Solicitante
          %th Data
          %th Número
          %th Status
      %tbody
        %tr
          %td.col-md-3= @order.contract.title if @order.contract.present?
          %td.col-md-3= @order.user.name if @order.user.present?
          %td.col-md-2= "#{@order.created_at.strftime('%d/%m/%Y às %H:%M')}"
          %td.col-md-1= "#{@order.id}/#{@order.created_at.strftime('%Y')}"
          %td.col-md-1= status_helper @order.status

.row
  .col-md-8
    %hr/
.row
  .col-md-12
    %h4 Produtos
%br/
.row
  .col-md-8
    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th Produto
          %th Unidade
          %th Quantidade
          %th Razão
      %tbody
        - @order.order_items.each do |order|
          %tr
            %td= order.product.title
            %td.col-md-2= order.unit
            %td.col-md-2= order.quantity
            %td= order.goal
            
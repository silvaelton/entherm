.row.title-row
  .col-md-12
    %h4.title 
      Listagem de categorias de fornecedor
      = link_to "nova categoria", new_supplier_category_path, class: 'btn btn-success btn-sm pull-right'
.row
  .col-md-12
    %table.datatable.table-bordered.table-condensed
      %thead
        %tr
          %th Título
          %th Status
          %th Ações
      %tbody
        - @supplier_categories.each do |supplier|
          %tr
            %td= supplier.title
            %td= supplier.status ? 'ativo' : 'inativo'
            %td.col-md-2
              = link_to "editar", edit_supplier_category_path(supplier), class: 'btn btn-primary btn-xs'
              = link_to "remover", supplier_category_path(supplier), method: :delete, data: { confirm: t(:confirm_destroy)}, class: 'btn btn-danger btn-xs'
       
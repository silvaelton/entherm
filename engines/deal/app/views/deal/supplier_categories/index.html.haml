.row
  .col-sm-12
    %section.panel
      %header.panel-heading
        .title 
          Listagem de categorias de fornecedor
          %span.pull-right
            = link_to "Fornecedores", suppliers_path
            |
            = link_to "Nova Categoria", new_supplier_category_path
        %hr/
      .panel-body
        .adv-table
          .row
            .col-md-12
              %table.table.table-bordered.table-striped.datatable
                %thead
                  %tr
                    %th Título
                    %th Status
                    %th Ações
                %tbody
                  - @supplier_categories.order(:title).each do |supplier|
                    %tr
                      %td= supplier.title.upcase
                      %td.col-md-2= supplier.status ? 'ativo' : 'inativo'
                      %td.col-md-2
                        = link_to "", edit_supplier_category_path(supplier), class: 'btn btn-success btn-xs glyphicon glyphicon-pencil', title: "Editar"
                        = link_to "", supplier_category_path(supplier), method: :delete, data: { confirm: t(:confirm_destroy)}, class: 'icon-remove btn-xs btn btn-danger glyphicon glyphicon-remove', title: 'Remover'
                 
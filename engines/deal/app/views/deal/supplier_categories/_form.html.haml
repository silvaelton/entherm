= simple_form_for @supplier_category do |f|
  .row
    .col-md-5
      = f.input :title
  .row
    .col-md-2
      = f.input :status, as: :select, include_blank: false
  %hr/
  .row
    .col-md-12
      = f.submit 'Nova categoria', class: 'btn btn-success btn-sm'
      = link_to "Voltar", supplier_categories_path, class: 'btn btn-default btn-sm'
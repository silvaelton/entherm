.row
  .col-sm-12
    %section.panel
      %header.panel-heading
        .title
          Listagem de Fornecedores
          %span.pull-right
            = link_to "Categorias", supplier_categories_path
            |
            = link_to "Novo Fornecedor", new_supplier_path
        %hr/
      .panel-body
        .adv-table
          .row
            .col-md-12
              %table.table.table-bordered.table-striped.datatable
                %thead
                  %tr
                    %th Categoria
                    %th Nome
                    %th Cidade/UF
                    %th Contato
                    %th Telefones
                    %th Celulares
                    %th Ações
                %tbody
                  - @suppliers.each do |supplier|
                    %tr
                      %td= supplier.supplier_category.title.upcase if supplier.supplier_category.present?
                      %td= supplier.name
                      %td= "#{supplier.state.acronym}" if supplier.state.present?
                      %td= supplier.contact_name
                      %td= "#{supplier.contact_telephone} / #{supplier.contact_telephone_optional}"
                      %td= "#{supplier.contact_celphone} / #{supplier.contact_celphone_optional}"
                      %td.col-md-2
                        = link_to "", edit_supplier_path(supplier), class: 'btn btn-success btn-sm icon s7-edit', title: 'editar'
                        = link_to "", supplier_path(supplier), method: :delete, data: { confirm: t(:confirm_destroy)}, class: 'btn btn-danger btn-sm s7-trash', title: 'remover'
                 
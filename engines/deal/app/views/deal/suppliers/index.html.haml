.row
  .col-sm-12
    .portlet.portlet-boxed
      .portlet-header
        %h4.portlet-title Listagem de Fornecedores
        %span.pull-right
          = link_to "Categorias", supplier_categories_path, class: 'btn btn-secondary btn-xs'
          |
          = link_to "Novo Fornecedor", new_supplier_path, class: 'btn btn-success btn-xs'
      .portlet-body
        .adv-table
          .row
            .col-md-12
              %table.table.table-bordered.table-striped.datatable
                %thead
                  %tr
                    %th Categoria
                    %th Nome
                    %th Cidade/UF
                    %th Contato
                    %th Telefones
                    %th Celulares
                    %th Ações
                %tbody
                  - @suppliers.each do |supplier|
                    %tr
                      %td= supplier.supplier_category.title.upcase if supplier.supplier_category.present?
                      %td= supplier.name
                      %td= "#{supplier.state.acronym}" if supplier.state.present?
                      %td= supplier.contact_name
                      %td= "#{supplier.contact_telephone} / #{supplier.contact_telephone_optional}"
                      %td= "#{supplier.contact_celphone} / #{supplier.contact_celphone_optional}"
                      %td.col-md-1
                        = link_to "", edit_supplier_path(supplier), class: 'btn btn-success btn-xs glyphicon glyphicon-pencil', title: 'editar'
                        = link_to "", supplier_path(supplier), method: :delete, data: { confirm: t(:confirm_destroy)}, class: 'btn btn-danger btn-xs glyphicon glyphicon-remove', title: 'remover'
                 
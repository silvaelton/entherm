.row.title-row
  .col-md-12
    %h4.title 
      Listagem de contratos
      = link_to "novo contrato", new_contract_path, class: 'btn btn-success btn-sm pull-right'
.row
  .col-md-12
    %table.datatable.table-bordered.table-condensed
      %thead
        %tr
          %th Título
          %th Status
          %th Ações
      %tbody
        - @contracts.each do |contract|
          %tr
            %td= contract.title
            %td= contract.status ? 'ativo' : 'inativo'
            %td.col-md-2
              = link_to "editar", edit_contract_path(contract), class: 'btn btn-primary btn-xs'
              = link_to "remover", contract_path(contract), method: :delete, data: { confirm: t(:confirm_destroy)}, class: 'btn btn-danger btn-xs'
       
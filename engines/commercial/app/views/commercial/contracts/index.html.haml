.row
  .col-sm-12
    .portlet.portlet-boxed
      .portlet-header
        %h4.portlet-title Listagem de Contratos
        = link_to "novo contrato", new_contract_path, class: 'btn btn-success btn-xs pull-right '
      .portlet-body
        .adv-table
          .row
            .col-md-12
              %table.table.table-bordered.table-striped.datatable
                %thead
                  %tr
                    %th Título
                    %th Empresa Responsável
                    %th Status
                    %th Ações
                %tbody
                  - @contracts.each do |contract|
                    %tr
                      %td= contract.title
                      %td= contract.company.name if contract.company.present?
                      %td= contract.status ? 'ativo' : 'inativo'
                      %td.col-md-1
                        = link_to "", edit_contract_path(contract), class: 'btn btn-success btn-xs glyphicon glyphicon-pencil', title: "Editar"
                        = link_to "", contract_path(contract), method: :delete, data: { confirm: t(:confirm_destroy)}, class: 'btn btn-danger btn-xs glyphicon glyphicon-remove', title: "Remover"
                 